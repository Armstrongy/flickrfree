<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ImageContextViewScroll"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
			
	<LinearLayout
		android:id="@+id/ImgContextLayout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		xmlns:android="http://schemas.android.com/apk/res/android">
	
		<LinearLayout
			android:id="@+id/ImgContextSetsLayout"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			xmlns:android="http://schemas.android.com/apk/res/android">

			<TextView
				android:text="Sets This Photo Belongs To"
				android:id="@+id/TextSetsLabel"
				android:gravity="center_horizontal"
				android:background="#ffffff"
				android:textColor="#000000"
				android:padding="5px"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		
		</LinearLayout>

		<LinearLayout
			android:id="@+id/ImgContextPoolsLayout"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			xmlns:android="http://schemas.android.com/apk/res/android">

			<TextView
				android:text="Pools This Photo Belongs To"
				android:id="@+id/TextPoolsLabel"
				android:gravity="center_horizontal"
				android:background="#ffffff"
				android:textColor="#000000"
				android:padding="5px"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
	
		</LinearLayout>
		
	</LinearLayout>

</ScrollView>
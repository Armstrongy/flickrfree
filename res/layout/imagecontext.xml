<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/ImgContextLayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<TextView
		android:text="Sets This Photo Belongs To"
		android:id="@+id/TextSetsLabel"
		android:gravity="center_horizontal"
		android:background="#ffffff"
		android:textColor="#000000"
		android:padding="5px"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>

	<ListView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/ContextSetsListView"/>
		
	<TextView
		android:text="Pools This Photo Belongs To"
		android:id="@+id/TextPoolsLabel"
		android:gravity="center_horizontal"
		android:background="#ffffff"
		android:textColor="#000000"
		android:padding="5px"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>
		
	<ListView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/ContextPoolsListView"/>

</LinearLayout>
